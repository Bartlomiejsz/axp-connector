<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">    
    <body>
        <referenceBlock name="head.additional">
            <block name="launchbyadobe_launch_head_script" before="-" template="SearchDiscovery_LaunchByAdobe::launch_head.phtml" />
        </referenceBlock>

        <referenceContainer name="after.body.start">
            <block class="SearchDiscovery\LaunchByAdobe\Block\Display" name="launchbyadobe_datalayer_block" as="launchbyadobe_datalayer_block" template="SearchDiscovery_LaunchByAdobe::datalayer.phtml">
            </block>

            <block name="launchbyadobe_private_content_block"  template="SearchDiscovery_LaunchByAdobe::private_content_datalayer.phtml">
              <arguments>
                <argument name="jsLayout" xsi:type="array">
                  <item name="components" xsi:type="array">
                    <item name="launch" xsi:type="array">
                      <item name="component" xsi:type="string">SearchDiscovery_LaunchByAdobe/js/view/launch</item>
                    </item>
                  </item>
                </argument>
              </arguments>
            </block>

            <block class="SearchDiscovery\LaunchByAdobe\Block\Page" name="launchbyadobe_page_block" template="SearchDiscovery_LaunchByAdobe::page.phtml" />
        </referenceContainer>
    </body>
</page>